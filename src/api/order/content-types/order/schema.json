{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "customer_full_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone_number": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string",
      "required": true
    },
    "delivery_address": {
      "type": "string",
      "required": true
    },
    "payment_method": {
      "type": "string",
      "required": true
    },
    "delivery_method": {
      "type": "string",
      "required": true
    },
    "delivery_zone": {
      "type": "string"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "decimal",
      "required": true
    },
    "delivery_rate": {
      "type": "decimal",
      "required": true
    },
    "paid": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Waiting Verify Payment",
        "Payment Success",
        "Payment Not Found",
        "Packing",
        "Delivering"
      ],
      "required": true,
      "default": "Waiting Verify Payment"
    },
    "order_details": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-details",
      "required": true
    },
    "uuid": {
      "type": "customField",
      "regex": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "customField": "plugin::field-uuid.uuid",
      "required": true
    }
  }
}
